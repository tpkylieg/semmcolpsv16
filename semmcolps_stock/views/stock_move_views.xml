<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Inherited the Product Move list view-->
    <record id="view_move_line_tree_inherit_semmcolps_stock" model="ir.ui.view">
        <field name="name">view.move.line.tree.inherit.semmcolps.stock</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_id']" position="after">
                <field name="supplier_number" readonly="1"/>
            </xpath>
        </field>
    </record>

    <!--    Inherited the Stock move line tree view in case of detaile operations -->
    <record id="view_stock_move_line_detailed_operation_tree_inherit_semmcolps_stock" model="ir.ui.view">
        <field name="name">stock.move.line.operations.tree.inherit.semmcolps.stock</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_name']" position="after">
                <field name="supplier_number" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='lot_name']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <!--    Inherited the Stock move line tree view-->
    <record id="view_stock_move_line_operation_tree_inherit_semmcolps_stock" model="ir.ui.view">
        <field name="name">view.stock.move.line.operation_tree.inherit.semmcolps.stock</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_name']" position="after">
                <field name="picking_type_use_existing_lots" invisible="1"/>
                <field name="supplier_number" attrs="{'readonly': [('picking_type_use_existing_lots', '=', True)]}"/>
            </xpath>
            <xpath expr="//field[@name='lot_name']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <!--    Inherited the Stock move line Form view-->
    <record id="view_move_line_form_inherit_semmcolps_stock" model="ir.ui.view">
        <field name="name">view.move.line.form_inherit.semmcolps.stock</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_id']" position="after">
                <field name="supplier_number"/>
            </xpath>
            <xpath expr="//field[@name='lot_name']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
